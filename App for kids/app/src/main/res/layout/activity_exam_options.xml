<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamOptionsActivity">

    <Button
        android:id="@+id/examOptionsActivity_startExamButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Start Exam"
        app:layout_constraintEnd_toEndOf="@+id/examOptionsActivity_examItemsNumberPlainText"
        app:layout_constraintStart_toStartOf="@+id/examOptionsActivity_examItemsNumberPlainText"
        app:layout_constraintTop_toBottomOf="@+id/examOptionsActivity_examItemsNumberPlainText" />

    <EditText
        android:id="@+id/examOptionsActivity_examItemsNumberPlainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Number of Questions"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>